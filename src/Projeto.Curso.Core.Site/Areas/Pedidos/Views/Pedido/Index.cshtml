
@{
    ViewData["Title"] = "Listagem Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-md-12">
        <a asp-area="Pedidos" asp-controller="Pedido" asp-action="Incluir" class="btn btn-primary pull-left"><i class="glyphicon glyphicon-plus"></i> Novo Pedido</a>
    </div>
</div>

<br />

@Html.Partial("_Aguarde")

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">CADASTRO DE PEDIDOS</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <table id="tbgrid" class="table table-hover" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="no-sort"></th>
                                    <th class="no-sort"></th>
                                    <th class="text-center">Id</th>
                                    <th class="text-center">Data</th>
                                    <th class="text-center">Entrega</th>
                                    <th class="text-left">Cliente</th>
                                    <th class="text-center">Qtd. Itens</th>
                                    <th class="text-center">TOTAL</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        colunas = [
            {
                "data": "Id",
                "searchable": false,
                "sortable": false,
                "width": "2%",
                "sClass": "text-center",
                "render": function (id) {
                    return "<a href='#' class='btn btn-primary btn-sm showhint' title='Alterar registro'><i class='glyphicon glyphicon-pencil'></i></a>"
                }
            },

            {
                "data": "Id",
                "searchable": false,
                "sortable": false,
                "width": "2%",
                "sClass": "text-center",
                "render": function (id) {
                    return "<a href='#' class='btn btn-danger btn-sm showhint' title='Excluir registro'><i class='glyphicon glyphicon-trash'></i></a>"
                }
            },

            {
                "data": "Id",
                "width": "2%",
                "sClass": "text-center"
            },

            {
                "data": "DataPedido",
                "width": "10%",
                "sType": "date-uk",
                "sClass": "text-center"
            },

            {
                "data": "DataEntrega",
                "width": "10%",
                "sType": "date-uk",
                "sClass": "text-center"
            },

            {
                "data": "NomeCliente",
                "width": "40%",
                "sClass": "text-left"
            },

            {
                "data": "QtdTotalProdutos",
                "width": "10%",
                "sClass": "text-right"
            },

            {
                "data": "ValorTotalProdutos",
                "width": "10%",
                "sType": "currency",
                "sClass": "text-right"
            }
        ];

        $(document).ready(function () {
            ListagemConsulta("tbgrid", urlPedidos, colunas)
        });

    </script>

}


